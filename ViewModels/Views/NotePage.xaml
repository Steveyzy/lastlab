    using Notes.Models;

    namespace Notes.Views;

    public partial class NotePage : ContentPage
    {
        string _fileName = Path.Combine(FileSystem.AppDataDirectory, "note.txt");
        Note note;

        public NotePage()
        {
            InitializeComponent();
            note = new Note();
            BindingContext = note;
            LoadNote();
        }

        private void LoadNote()
        {
            if (File.Exists(_fileName))
            {
                note.Text = File.ReadAllText(_fileName);
                note.Date = File.GetLastWriteTime(_fileName);
            }
        }

        private void SaveButton_Clicked(object sender, EventArgs e)
        {
            note.Date = DateTime.Now;
            File.WriteAllText(_fileName, note.Text);
            DisplayAlert("Saved", "Your note has been saved.", "OK");
        }

        private void DeleteButton_Clicked(object sender, EventArgs e)
        {
            if (File.Exists(_fileName))
            {
                File.Delete(_fileName);
            }
            note.Text = string.Empty;
            DisplayAlert("Deleted", "Your note has been deleted.", "OK");
        }
    }
